
[user]
        email = carolinesun@kkbox.com
        name = Caroline Sun

[color]
        ui = true

[alias]
        ci = commit
        co = checkout
	st = status
	br = branch -v
        rt = reset --hard
        unstage = reset HEAD
        uncommit = reset --soft HEAD^
        l = log --pretty=oneline --abbrev-commit --graph --decorate
        amend = commit --amend
        who = shortlog -n -s --no-merges
        g = grep -n --color -E
        cp = cherry-pick -x
        nb = checkout -b
        addall = !sh -c 'git add . && git add -u' 

[core]
        editor = vim

[merge]
        tool = vim

[push]
	default = simple
